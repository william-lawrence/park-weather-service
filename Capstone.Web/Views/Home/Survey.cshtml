@model SurveyResult
@{
    ViewData["Title"] = "Survey";
}

<body>
    <h2>Favorite Park Survey:</h2>
    <div class="card">
        <form asp-controller="Home" asp-action="Survey" method="post">

            <label class="inquiry">Pick Your Favorite Park:</label>
            <select asp-for="ParkCode" asp-items="SurveyResult.Parks"></select>
            <span asp-validation-for="ParkCode" class="validation-error"></span>
            <br />

            <label class="inquiry">State of Residence:</label>
            <select asp-for="State" asp-items="SurveyResult.States"></select>
            <span asp-validation-for="State" class="validation-error"></span>
            <br />

            <label class="inquiry">Email:</label>
            <input class="inquiry" asp-for="EmailAddress" />
            <span asp-validation-for="EmailAddress" class="validation-error"></span>
            <br />

            <label>What is Your Activity Level:</label>
            <span asp-validation-for="ActivityLevel" class="validation-error"></span>
            <br />

            <input value="Inactive" type="radio" asp-for="ActivityLevel" />
            <label>Inactive</label>
            <br />

            <input value="Sedentary" type="radio" asp-for="ActivityLevel" />
            <label>Sedentary</label>
            <br />

            <input value="Active" type="radio" asp-for="ActivityLevel" />
            <label>Active</label>
            <br />

            <input value="Extremely Active" type="radio" asp-for="ActivityLevel" />
            <label>Extremely Active</label>
            <br />

            <input type="submit" value="Submit" />
        </form>
    </div>

</body>

